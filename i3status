# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
# i recommend you change the colorcode below and coustomize it with your preferences
        color_good = "#BBBBBB"
        color_bad = "#CC1616"
        color_degraded = "#8fb5bc"
        interval = 1
}
order += "ipv6"
order += "cpu_temperature 1"
order += "cpu_usage"
order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "load"
order += "tztime local"
order += "volume master"

volume master {
#       format = " 'insert icon or text' %volume  " 
        device = "default"
        mixer = "Master"
        mixer_idx = 0
        # termsyn font
        format = "ðŸ”Š %volume "
}
wireless _first_ {
        format_up = "Wifi: (%quality at %essid) %ip"
        format_down = "Wifi: down"
}
#you can enter/change anything inside the empty string("") in 'format_down'
# i set it empty so that it will only show up when connected :)
ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = ""
}

battery all {
        format = "%status %percentage %remaining"
}

tztime local {
#you should enter your name/companyname inside the ** if you dont want to,you should backspace it. And keep the time and date format inside the string.
         format = "%Y-%m-%d  %H:%M:%S *enter your name or company"
}

disk "/" {
        format = "Space: %avail"
}
cpu_usage {
  format = "%usage"
}
#you can add more cpu temp if you wish
#you should make sure your directory to cpu temp is right.
cpu_temperature 1 {
        format = "%degreesÂ°C"
        path = "/sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input"
        max_threshold = 95
}
cpu_usage {
        format = "%usage "
}
